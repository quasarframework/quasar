{
  "manifest_version": 2,

  "icons": {
    "16": "icons/icon-16x16.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  },

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "my-content-script.js"
    ],
    "css": [
      "assets/content.css"
    ]
  }],

  "permissions": [
    "<all_urls>",
    "storage",
    "tabs",
    "activeTab"
  ],

  "web_accessible_resources": [
    "*",
    "<all_urls>"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}
