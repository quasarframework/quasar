.api-row
  padding 8px 8px 4px
  font-weight 400

  & + &
    border-top 1px solid #ddd

  &__item
    margin-bottom 4px

  &__subitem
    padding 4px 0 0 16px
    border-radius 5px
    > div
      border 1px solid #eee !important
      border-radius inherit
    > div + div
      margin-top 4px

  &__value
    font-weight 300

  &--indent
    padding-left 16px
