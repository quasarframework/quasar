{
  "mixins": [ "mixins/panel-parent" ],

  "props": {
    "color": {
      "extends": "color"
    },

    "dark": {
      "extends": "dark"
    },

    "flat": {
      "extends": "flat"
    },

    "bordered": {
      "extends": "bordered"
    },

    "vertical": {
      "type": "Boolean",
      "desc": "Set Stepper as vertical instead of default horizontal."
    },

    "alternative-labels": {
      "type": "Boolean",
      "desc": "Use alternative labels (applies only to horizontal stepper)."
    },

    "header-nav": {
      "type": "Boolean",
      "desc": "Allow navigation through the header."
    },

    "contractable": {
      "type": "Boolean",
      "desc": "Hide labels on narrow windows."

    },

    "done-icon": {
      "type": "Boolean",
      "desc": "Show or hide the 'done' icon for any 'done' step."
    },

    "done-color": {
      "extends": "color"
    },

    "active-icon": {
      "type": "Boolean",
      "desc": "Show or hide the 'active' icon for any 'active' step."
    },

    "active-color": {
      "extends": "color"
    },

    "error-icon": {
      "type": "Boolean",
      "desc": "Show or hide the 'error' icon for any 'error' step."
    },

    "error-color": {
      "extends": "color"
    }
  },

  "slots": {
    "default": {
      "desc": "Suggestion: QStep"
    }
  },

  "events": {
    "input": {
      "desc": "Emitted when component's model changes (current panel name); Is also used by v-model",
      "params": {
        "value": {
          "type": "String or Number",
          "desc": "New current panel name"
        }
      }
    }
  }
}
