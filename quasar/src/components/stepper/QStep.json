{
  "mixins": [ "mixins/panel-child" ],

  "props": {
    "icon": {
      "extends": "icon"
    },

    "color": {
      "extends": "color"
    },

    "title": {
      "type": "String",
      "desc": "Step title.",
      "required": true,
      "examples": [
        "Ad Groups", "Payment"
      ]
    },

    "caption": {
      "type": "String",
      "desc": "Stepâ€™s additional information that appears beneath the title.",
      "examples": [
        "Create an account", "Enter your payment details"
      ]
    },

    "done-icon": {
      "type": "Boolean",
      "desc": "Show or hide the 'done' icon."
    },

    "done-color": {
      "extends": "color"
    },

    "active-icon": {
      "type": "Boolean",
      "desc": "Show or hide the 'active' icon."
    },

    "active-color": {
      "extends": "color"
    },

    "error-icon": {
      "type": "Boolean",
      "desc": "Show or hide the 'error' icon."
    },

    "error-color": {
      "extends": "color"
    },

    "header-nav": {
      "type": "Boolean",
      "default": true,
      "desc": "Allow navigation through the header."
    },

    "done": {
      "type": "Boolean",
      "desc": "Mark the step as 'done'."
    },

    "error": {
      "type": "Boolean",
      "desc": "Mark the step as having an error."
    }
  },

  "slots": {
    "default": {
      "desc": "The content of the step. Can contain a QStepperNavigation if you want to override the default navigation."
    }
  }
}
