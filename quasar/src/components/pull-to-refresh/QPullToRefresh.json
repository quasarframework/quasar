{
  "props": {
    "color": {
      "extends": "color"
    },

    "icon": {
      "extends": "icon",
      "desc": "Icon to display when refreshing the content"
    },

    "no-mouse": {
      "type": "Boolean",
      "desc": "Don't listen for mouse events"
    },

    "disable": {
      "extends": "disable"
    }
  },

  "events": {
    "refresh": {
      "desc": "Called whenever a refresh is trigger. At this time, your function should load more data",
      "params": {
        "done": {
          "type": "Function",
          "desc": "Call the done() function when your data has been refreshed."
        }
      }
    }
  },
 
  "methods": {
    "trigger": {
      "desc": "Triggers a refresh."
    },

    "updateScrollTarget": {
      "desc": "Updates the scroll target"
    }
  }
 
}
