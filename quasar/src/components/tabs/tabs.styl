.q-tab
  padding 0 16px
  height 48px

  text-transform uppercase
  white-space nowrap

  // for route tabs
  color inherit
  text-decoration none

  &--full
    height 72px

  &--no-caps
    text-transform none

  &__content
    height inherit
    min-width 40px

    &--inline
      .q-tab__icon + .q-tab__label
        padding-left 8px

    .q-chip--floating
      top 0
      right -16px

  &__icon
    width 24px
    height 24px
    font-size 24px

  &__label
    font-size $button-font-size
    line-height $button-line-height
    font-weight $button-font-weight

  .q-badge
    top 3px
    right -12px

  &__alert
    position absolute
    top 7px
    right -9px
    height 10px
    width 10px
    border-radius 50%
    background currentColor

  &__indicator
    opacity 0
    height 2px
    background currentColor

  &--active .q-tab__indicator
    opacity 1
    transform-origin left

  &--inactive
    opacity .85

.q-tabs

  &--not-scrollable .q-tabs__arrow
    display none

  &__arrow
    cursor pointer
    min-width 36px

  &__content
    overflow hidden
    flex 1 1 auto

    &--align

      &-center
        justify-content center

      &-right
        justify-content flex-end

      &-justify .q-tab
        flex 1 1 auto

  &__offset
    display none

  &--dense
    .q-tab
      height 40px
      &--full
        height 52px

body.mobile
  .q-tabs

    &__content
      overflow auto

    &--scrollable .q-tabs__offset
      display flex

      // also update QTabs > extraOffset (js)
      min-width 52px

  .q-tabs__arrow
    display none

.q-tab-panels
  background white
  overflow hidden

.q-tab-panel
  padding 16px

@media (min-width $breakpoint-lg-min)
  .q-header, .q-footer
    .q-tab__content
      min-width 128px
