{
  "props": {
    "contentClass": {
      "type": "String"
    },

    "contentStyle": {
      "type": "String"
    },

    "maxHeight": {
      "type": "String",
      "default": null
    },

    "maxWidth": {
      "type": "String",
      "default": null
    },

    "transitionShow": {
      "default": "jump-down"
    },

    "transitionHide": {
      "default": "jump-up"
    },

    "anchor": {
      "type": "String",
      "default": "bottom middle"
    },

    "offset": {
      "type": "Array"
    },

    "target": {
      "type": "Boolean or String",
      "default": true
    },

    "delay": {
      "type": "Number",
      "default": 0
    }
  },
  "slots": {
    "default": {
      "desc": "Default slot can be used as label, unless 'label' prop is specified; Suggestion: string"
    }
  }
}
