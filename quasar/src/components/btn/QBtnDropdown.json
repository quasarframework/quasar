{
  "props": {
    "value": {
      "type": "Boolean",
      "extends": "value"
    },

    "icon": {
      "extends": "icon",
      "desc": "Icon to be used on the left side or as the button text."
    },

    "icon-right": {
      "extends": "icon",
      "desc": "Icon to be used on the right side."
    },

    "loading": {
      "type": "Boolean",
      "desc": "Set the button to loading state with a loading spinner.",
      "default": "false"
    },

    "disable": {
      "extends": "disable"
    },

    "label":{
      "type": "String or Number",
      "desc": "The text that will be shown on the button.",
      "examples": ["Button Label", "10"]
    },

    "tabindex": {
      "extends": "tabindex"
    },

    "wait-for-ripple": {
      "type": "Boolean",
      "desc": "Wait for the ripple effect to finish before emitting the @click event.",
      "default": "false"
    },

    "type":{
      "type": "String",
      "desc": "Define the button HTML DOM type.",
      "values": [ "a", "submit", "button", "reset" ],
      "examples": [ "button" ]
    },

    "to": {
      "extends" : "to",
      "desc": "Vue-Router direction for the button to call when clicked.",
      "examples": ["'/help', '{name: 'Help'}"]
    },

    "replace": {
      "extends" : "replace",
      "desc": "Replace the current route, not pushing it to the window history."
    },

    "size": {
      "extends": "size",
      "desc": "Button size as one of the examples or a css unit string size.",
      "examples": ["xs", "sm", "md", "lg", "xl", "form", "form-label", "form-hide-underline", "form-label-hide-underline", "form-inverted", "form-label-inverted", "25px", "2rem", "3vw"]
    },

    "color": {
      "extends": "color"
    },

    "text-color": {
      "extends": "text-color"
    },

    "align": {
      "type": "String",
      "desc": "Label or content alignment.",
      "default": "center",
      "examples": ["left", "right", "center", "around", "between"]
    },

    "dense": {
      "extends": "dense"
    },

    "push": {
      "type": "Boolean",
      "desc": "Use 'push' design for button."
    },

    "flat": {
      "extends": "flat"
    },

    "round": {
      "type": "Boolean",
      "desc": "Make the button round."
    },

    "unelevated": {
      "type": "Boolean",
      "desc": "Make the button flat with no shadow."
    },

    "outline": {
      "type": "Boolean",
      "desc": "Use 'outline' design for button."
    },

    "stack": {
      "type": "Boolean",
      "desc": "Make the buttons stacked on each other like rows."
    },

    "stretch": {
      "type": "Boolean",
      "desc": "Make the button takes the whole parent height, as a flexbox streched element."
    },

    "rounded": {
      "extends": "rounded"
    },

    "fab": {
      "type": "Boolean",
      "desc": "Makes the button as a Floating Action Button"
    },

    "fab-mini": {
      "type": "Boolean",
      "desc": "Make the Fab button smaller."
    },

    "no-wrap": {
      "type": "Boolean",
      "desc": "Prevents the text from wrapping."
    },

    "no-caps": {
      "type": "Boolean",
      "desc": "Define as true if you dont want the material design uppercase letter."
    },

    "cover": {
      "type": "Boolean",
      "desc": "Define if the dropdown menu will cover the button."
    },

    "ripple": {
      "extends": "ripple"
    },

    "auto-close": {
      "type": "Boolean",
      "desc": "Close the dropdown menu automatically after click on an item or outside."
    },

    "persistent": {
      "type": "Boolean",
      "desc": "The dropdown menu will only close when clicked on the arrow button."
    },

    "menu-anchor": {
      "type": "String",
      "desc": "Where the dropdown display anchor of the button will be set.",
      "examples": ["bottom right", "top left"],
      "default": "bottom right"
    },

    "menu-self": {
      "type": "String",
      "desc": "Where the dropdown display anchor of it self will be set.",
      "examples": ["top right", "bottom left"],
      "default": "top left"
    }

  },

  "events": {
    "click": {
      "desc": "Emitted on button click if 'disabled' property is not defined as 'true'",
      "params": {
        "evt": {
          "type": "Object",
          "desc": "JS event object"
        }
      }
    },

    "before-show": {
      "desc": "Emitted before the dropdown shows.",
      "params": {
        "evt": {
          "type": "Object",
          "desc": "JS event object"
        }
      }
    },

    "show": {
      "desc": "Emitted on dropdown shows.",
      "params": {
        "evt": {
          "type": "Object",
          "desc": "JS event object"
        }
      }
    },

    "before-hide": {
      "desc": "Emitted before the dropdown hides.",
      "params": {
        "evt": {
          "type": "Object",
          "desc": "JS event object"
        }
      }
    },

    "hide": {
      "desc": "Emitted on dropdowns hide.",
      "params": {
        "evt": {
          "type": "Object",
          "desc": "JS event object"
        }
      }
    }
  }
}
