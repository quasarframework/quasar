{
  "behavior": {
    "$listeners": true
  },

  "props": {
    "size": {
      "extends": "size"
    },

    "font-size": {
      "type": "String",
      "desc": "The size in CSS units, including unit name, of the content (icon, text)",
      "examples": [ "18px", "2rem" ]
    },

    "color": {
      "extends": "color"
    },

    "text-color": {
      "extends": "text-color"
    },

    "icon": {
      "extends": "icon"
    },

    "square": {
      "extends": "square"
    },

    "rounded": {
      "extends": "rounded"
    }
  },

  "slots": {
    "default": {
      "desc": "Optional; Suggestions: one character string, <img> tag"
    }
  }
}
