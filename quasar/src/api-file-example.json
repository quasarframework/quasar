{
  "props": {
    "hidden": {
      "type": "Boolean",
      "desc": "Puts component into 'hidden' mode"
    },

    "position": {
      "type": "String",
      "desc": "Positions component at one of the edges of the screen",
      "examples": [ "bottom" ],
      "required": true,
      "default": "top",
      "values": [ "top", "right", "bottom", "left" ]
    },

    "font-size": {
      "type": "String",
      "desc": "The size in CSS units, including unit name, of the content (icon, text)",
      "examples": [ "18px", "2rem" ]
    },

    "color": {
      "extends": "color"
    },

    "size": {
      "extends": "size",
      "desc": "My better description"
    }
  },

  "slots": {
    "default": {
      "extends": "default"
    },

    "icon": {
      "desc": "Slot for replacing the default dropdown icon"
    }
  },

  "scopedSlots": {
    "default": {
      "extends": "default"
    },

    "item": {
      "desc": "Scoped slot for displaying each uploaded file"
    }
  },

  "methods": {
    "show": {
     "extends": "show"
    },

    "showNow": {
      "extends": "show",
      "desc": "My better description"
    },

    "hide": {
      "params": {
        "evt": {
          "type": "Object",
          "required": false,
          "desc": "JS event object"
        }
      },
      "desc": "Triggers component to hide"
    }
  }
}
