$generic-border-radius         ?= 2px
$generic-input-size            ?= 22px
$generic-input-border-width    ?= 2px

$typography-font-family        ?= 'Roboto'

$toolbar-color                 ?= white
$toolbar-background            ?= $primary
$toolbar-active-color          ?= $primary
$toolbar-faded-color           ?= composite-color($primary)

if $typography-font-family == 'Roboto' && $quasar-dont-import-fonts != true
  @font-face
    font-family 'Roboto'
    font-weight 200
    src url('~roboto-fontface/fonts/Roboto/Roboto-Thin.woff') format('woff')

  @font-face
    font-family 'Roboto'
    font-weight 300
    src url('~roboto-fontface/fonts/Roboto/Roboto-Light.woff') format('woff')

  @font-face
    font-family 'Roboto'
    font-weight 400
    src url('~roboto-fontface/fonts/Roboto/Roboto-Regular.woff') format('woff')

  @font-face
    font-family 'Roboto'
    font-weight 500
    src url('~roboto-fontface/fonts/Roboto/Roboto-Medium.woff') format('woff')

  @font-face
    font-family 'Roboto'
    font-weight 700
    src url('~roboto-fontface/fonts/Roboto/Roboto-Bold.woff') format('woff')

@import './quasar.core.variables'

@import '../components/*/*.mat'
@import '../css-components/*/*.mat'
@import '../vue-components/*/*.mat'

@import './quasar.core.definitions'
