.q-btn
  display inline-flex
  align-items center
  justify-content center
  outline 0
  border 0
  vertical-align middle
  vertical-align -webkit-baseline-middle
  cursor pointer
  -webkit-appearance button
  font-weight $button-font-weight
  text-decoration none
  color inherit
  background transparent
  box-shadow $button-shadow
  transition $button-transition
  text-transform uppercase
  font-size $button-size
  padding $button-padding
  line-height 1.24
  .q-icon
    font-size 2.232ex
  .q-spinner
    height 2.232ex
    width 2.232ex

  &.disabled
    opacity .7 !important
  &:not([disabled]):active
    box-shadow $shadow-8
  &.full-width
    border-radius 0 !important

.q-btn-progress
  transition all .3s
  height 100%
  background rgba(255, 255, 255, .25)
  &.q-btn-dark-progress
    background rgba(0, 0, 0, .2)

.q-btn-no-uppercase
  text-transform none

.q-btn-rectangle
  border-radius $button-border-radius

.q-btn-flat, .q-btn-outline
  box-shadow none !important

.q-btn-outline
  border 1px solid currentColor
  background transparent !important

.q-btn-push
  border-radius $button-push-border-radius
  border-bottom 3px solid rgba(0, 0, 0, .15)
  &:active:not(.disabled)
    box-shadow none
    transform translateY(3px)
    border-bottom-color transparent

.q-btn-rounded
  border-radius $button-rounded-border-radius

.q-btn-round
  box-sizing content-box
  border-radius 50%
  box-shadow $button-shadow
  font-size $button-round-size
  padding $button-round-padding
  .q-btn-inner
    height 1em
    width 1em
  .q-icon
    font-size 1em
  .q-spinner
    height 1em
    width 1em
  &:active
    box-shadow $shadow-8

@media (max-width $breakpoint-sm-max)
  .q-btn-round
    padding $button-round-padding-mini

.q-btn-dense
  font-size $button-size-dense
  padding $button-padding-dense

.q-btn-mini
  padding $button-round-padding-mini

.q-btn-compact
  padding-left $button-padding-compact
  padding-right $button-padding-compact
  .on-left
    margin-right $button-padding-compact
  .on-right
    margin-left $button-padding-compact
