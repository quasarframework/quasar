.q-splitter

  &__panel > .q-splitter
    width 100%
    height 100%

  &__separator
    background currentColor
    user-select none
    position relative
    z-index 1

    > div
      position absolute
      top 0
      bottom 0
      left 0
      right 0

  &--vertical
    &.q-splitter--active
      cursor col-resize
    > .q-splitter__separator
      width 3px
      &:hover > div
      .touch & > div
        left -6px
        right -6px
    &.q-splitter--workable > .q-splitter__separator
      cursor col-resize

  &--horizontal
    &.q-splitter--active
      cursor row-resize
    > .q-splitter__separator
      height 3px
      &:hover > div
      .touch & > div
        top -6px
        bottom -6px
    &.q-splitter--workable > .q-splitter__separator
      cursor row-resize

  &__before, &__after
    overflow auto
