.q-splitter

  &__panel > .q-splitter
    width 100%
    height 100%

  &__separator
    background currentColor
    user-select none

  &--vertical
    &.q-splitter--active
      cursor col-resize
    > .q-splitter__separator
      width 3px
    &.q-splitter--workable > .q-splitter__separator
      cursor col-resize

  &--horizontal
    &.q-splitter--active
      cursor row-resize
    > .q-splitter__separator
      height 3px
    &.q-splitter--workable > .q-splitter__separator
      cursor row-resize

  &__before, &__after
    overflow auto
