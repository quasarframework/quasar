.q-media
  position relative
  width 100% !important
  min-width 230px !important
  min-height: 2rem !important
  overflow hidden !important
  &--player
    width 100%
    height 100%
    vertical-align bottom
    align-self flex-end
  &__audio--standard
    width 100%
    height 4rem !important
    vertical-align bottom
    align-self flex-end
  &__audio--dense
    width 100%
    height 2rem !important
    vertical-align bottom
    align-self flex-end
  &__error-window 
    position absolute;
    left 0
    top 0
    width 100%
    height 1rem
    font-size .8rem
    text-align center
    color white
    background-color rgba(255, 0, 0, 0.25)
    transition height 0.25s ease-in
  &__overlay-window 
    position absolute;
    left 0
    top 0
    width 100%
    height 100%
    background-color transparent
  &__loading
    &--video
      position absolute;
      left 50%
      margin-left -1.5rem
      bottom 50%
      margin-bottom -1.5rem
      width 3rem
      height: 3rem
      color white
      background-color transparent
    &--audio
      position absolute;
      left 50%
      margin-left -0.5rem
      bottom 50%
      margin-bottom -0.5rem
      width 1rem
      height: 1rem
      color white
      background-color transparent
  &__big-button
    &--container
      position absolute
      left 50%
      margin-left -1.5rem
      bottom 50%
      margin-bottom -1.5rem
      color white
      background-color transparent
      border-style solid
      border-color white
      border-width 1px
      border-radius 1.5rem
      opacity 1.0
      &:hover
        background-color rgba(0, 0, 0, 0.40)
  &__controls
    &__container 
      position absolute
      left 0
      bottom 0
      background-color rgba(0, 0, 0, 0.40)
      width 100%
      overflow hidden
      &--row
        height 2rem
      &--standard
        height 4rem !important
        transition height 0.25s ease-in
      &--dense
        height 2rem !important
        transition height 0.25s ease-in
      &--hidden
        height 0 !important
        transition height 0.25s ease-out
  &__controls
    &--button
      max-width 2rem !important
      min-width 2rem !important
      max-height 2rem !important
      min-height 2rem !important
    &--volume-box
      max-height 2rem !important
      min-height 2rem !important
    &--video-time-text
      padding 0 0.25rem
      color #fff
      font-size .8rem
      text-align center
    &--video-slider
      padding 0 4px
  &--fullscreen
    z-index 8000
    position fixed !important
    top 0 !important
    left 0 !important
    height 100vh !important
    width 100vw !important
    overflow hidden
::-webkit-media-controls
  display none !important
video::-webkit-media-controls
  display none !important
video::-webkit-media-controls-enclosure
  display none !important;
