.q-media
  position relative
  width 100%
  min-width 230px
  overflow hidden
  &__video
    width 100%
    height 100%
    vertical-align bottom
    align-self flex-end
  &__error-window 
    position absolute;
    left 0
    top 0
    width 100%
    height 1rem
    font-size .8rem
    text-align center
    color white
    background-color rgba(255, 0, 0, 0.25)
  &__hidden-window 
    position absolute;
    left 0
    top 0
    width 100%
    height 100%
    background-color transparent
  &__loading
    &--container
      position absolute;
      left 50%
      margin-left -1.5rem
      bottom 50%
      margin-bottom -1.5rem
      color white
      background-color transparent
  &__big-button
    &--container
      position absolute
      left 50%
      margin-left -1.5rem
      bottom 50%
      margin-bottom -1.5rem
      color white
      background-color transparent
      border-style solid
      border-color white
      border-width 1px
      border-radius 1.5rem
      opacity 1.0
      &:hover
        background-color rgba(0, 0, 0, 0.40)
  &__controls
    &__container 
      position absolute
      left 0
      bottom 0
      background-color rgba(0, 0, 0, 0.40)
      height 4rem
      width 100%
      overflow hidden
      &--top
        left 0
        top 0
        height 2rem
        line-height 2rem
        width 100%
      &--bottom
        left 0
        bottom 0
        height 2rem
        line-height 2rem
        width 100%
  &__controls
    &--button
      max-width 2rem !important
      min-width 2rem !important
      max-height 2rem !important
      min-height 2rem !important
    &--volume-box
      max-height 2rem !important
      min-height 2rem !important
    &--video-time-text
      padding 0 0.25rem
      color #fff
      font-size .8rem
      text-align center
    &--video-slider
      padding 0 4px
  &--fullwindow
    z-index 2000
    position fixed
    top 0
    left 0
    height 100vh
    width 100vw
    overflow hidden
::-webkit-media-controls
  display none !important
video::-webkit-media-controls
  display none !important
video::-webkit-media-controls-enclosure
  display none !important;