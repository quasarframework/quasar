$action-sheet-avatar-padding   ?= .6rem 1.2rem
$action-sheet-hover-background ?= #d0d0d0

.q-action-sheet-gallery
  > div
    padding $action-sheet-avatar-padding
    transition all .3s
    &:hover, &:focus
      background $action-sheet-hover-background
      outline 0
  i, img
    font-size 2rem
    margin-bottom 5px
  .avatar
    width 50px
    height 50px
