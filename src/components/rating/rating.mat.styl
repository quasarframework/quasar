.q-rating
  color $rating-grade-color
  vertical-align middle

  i
    color currentColor
    text-shadow $rating-shadow
    position relative
    cursor default
    opacity .4
    &.hovered
      transform scale(1.3)
    &.exselected
      opacity .7
    &.active
      opacity 1
    & + i
      margin-left .3rem


  &.editable i
    cursor pointer
  &:not(.editable) i:focus
    outline none
