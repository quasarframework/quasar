$layout-transition = all .12s ease-in

.q-layout
  width 100%
  min-height 100vh

.q-layout-container
  .q-layout
    min-height 100%
  > div
    transform translate3d(0, 0, 0)
    > div
      min-height 0
      max-height 100%

.q-layout__header
  &--hidden
    transform translateY(-110%)

.q-layout__footer
  &--hidden
    transform translateY(110%)

.q-layout__drawer
  position absolute
  top 0
  bottom 0
  background $layout-aside-background
  z-index $z-side
  &--on-top
    z-index $z-fixed-drawer
  &--delimiter
    // box-shadow $layout-aside-shadow
  &--left
    left 0
    transform translateX(-100%)
  &--right
    right 0
    transform translateX(100%)

  &--mini
    padding 0 !important
    .q-item, .q-item-section
      text-align center
      justify-content center
    .q-mini-drawer-hide,
    .q-expansion-item__content, .q-item__label, .q-item__section--main, .q-item__section--side:last-child
      display none
  &--normal
    .q-mini-drawer-only
      display none
  &--mobile
  .q-mini-drawer-only, .q-mini-drawer-hide
    display none

.q-layout, .q-layout__header, .q-layout__footer, .q-layout__page
  position relative

.q-layout__item--marginal
  z-index $z-marginals

.q-layout__backdrop
  z-index ($z-fixed-drawer - 1) !important
  will-change background-color


.q-layout__drawer-opener
  z-index ($z-marginals + 1)
  height 100%
  width 15px
  user-select none

.q-layout__page-sticky--shrink
  pointer-events none
  > div
    display inline-block
    pointer-events auto

body.q-ios-statusbar-padding
  .q-layout .q-layout__header > .q-toolbar:nth-child(2),
  .q-layout .q-layout__header > .q-tabs:nth-child(2) .q-tabs-head
  .q-layout .q-layout__drawer--top-padding,
  .modal:not(.minimized) .q-layout__header > .q-toolbar:nth-child(1)
    padding-top $ios-statusbar-height
    min-height ($toolbar-min-height + $ios-statusbar-height)

body.q-ios-statusbar-x
  .q-layout .q-layout__header > .q-toolbar:nth-child(2),
  .q-layout .q-layout__header > .q-tabs:nth-child(2) .q-tabs-head
  .q-layout .q-layout__drawer--top-padding,
  .modal:not(.minimized) .q-layout__header > .q-toolbar:nth-child(1)
    padding-top env(safe-area-inset-top)
  .q-layout .q-layout__footer > .q-toolbar:last-child,
  .q-layout .q-layout__footer > .q-tabs:last-child .q-tabs-head
  .q-layout .q-layout__drawer--top-padding,
  .modal:not(.minimized) .q-layout__footer > .q-toolbar:last-child
    padding-bottom env(safe-area-inset-bottom)
    min-height ($toolbar-min-height + $ios-statusbar-height)

/* body */
.q-layout--animate .q-layout__item--transitionable
  transition $layout-transition !important
.q-body--drawer-toggle
  overflow-x hidden !important
/* body - end */

.q-layout-padding
  @media (max-width $breakpoint-sm-max)
    padding 1.5rem .5rem
    &.horizontal
      padding 0 .5rem
  @media (min-width $breakpoint-md-min) and (max-width $breakpoint-md-max)
    padding 1.5rem 2rem
    margin auto
    &.horizontal
      padding 0 2rem
  @media (min-width $breakpoint-lg-min) and (max-width $breakpoint-lg-max)
    padding 2.5rem 3rem
    margin auto
    &.horizontal
      padding 0 3rem
  @media (min-width $breakpoint-xl-min)
    padding 3rem 4rem
    margin auto
    &.horizontal
      padding 0 4rem
