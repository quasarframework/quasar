.q-toolbar
  padding $toolbar-padding
  min-height $toolbar-min-height
  overflow hidden
  width 100%
  color $toolbar-color
  background $toolbar-background

  > .q-btn
    margin 0 $button-padding-compact
    &.q-btn-dense
      padding-left $button-padding-compact
      padding-right $button-padding-compact
    &:not(.q-btn-dense)
      padding $button-padding-compact
    &:first-child, & + .q-btn
      margin-left 0
    &:last-child
      margin-right 0

.q-toolbar-inverted
  color $toolbar-background
  background transparent

.q-toolbar-title
  flex 1
  min-width 1px
  max-width 100%
  align-items center
  font-size $toolbar-title-font-size
  font-weight $toolbar-title-font-weight
  padding $toolbar-title-padding
  text-align center

.q-toolbar-subtitle
  font-size $toolbar-subtitle-font-size
  opacity .7

.q-toolbar-title, .q-toolbar-subtitle
  text-overflow ellipsis
  white-space nowrap
  overflow hidden
