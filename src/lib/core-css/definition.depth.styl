$shadow-color ?= rgba(0, 0, 0, .14)
$shadow-transition ?= box-shadow .28s cubic-bezier(.4, 0, .2, 1)

$shadow-2 ?= 0 2px 2px 0 $shadow-color, 0 1px 5px 0 rgba(0, 0, 0, .12), 0 3px 1px -2px rgba(0, 0, 0, .2)
$shadow-3 ?= 0 3px 4px 0 $shadow-color, 0 1px 8px 0 rgba(0, 0, 0, .12), 0 3px 3px -2px rgba(0, 0, 0, .4)
$shadow-4 ?= 0 4px 5px 0 $shadow-color, 0 1px 10px 0 rgba(0, 0, 0, .12), 0 2px 4px -1px rgba(0, 0, 0, .4)
$shadow-6 ?= 0 6px 10px 0 $shadow-color, 0 1px 18px 0 rgba(0, 0, 0, .12), 0 3px 5px -1px rgba(0, 0, 0, .4)
$shadow-8 ?= 0 8px 10px 1px $shadow-color, 0 3px 14px 2px rgba(0, 0, 0, .12), 0 5px 5px -3px rgba(0, 0, 0, .4)
$shadow-16 ?= 0 16px 24px 2px $shadow-color, 0  6px 30px 5px rgba(0, 0, 0, .12), 0  8px 10px -5px rgba(0, 0, 0, .4)

$shadow-2-up ?= 0 -2px 2px 0 $shadow-color, 0 -1px 5px 0 rgba(0, 0, 0, .12), 0 -3px 1px -2px rgba(0, 0, 0, .2)
$shadow-3-up ?= 0 -3px 4px 0 $shadow-color, 0 -1px 8px 0 rgba(0, 0, 0, .12), 0 -3px 3px -2px rgba(0, 0, 0, .4)
$shadow-4-up ?= 0 -4px 5px 0 $shadow-color, 0 -1px 10px 0 rgba(0, 0, 0, .12), 0 -2px 4px -1px rgba(0, 0, 0, .4)
$shadow-6-up ?= 0 -6px 10px 0 $shadow-color, 0 -1px 18px 0 rgba(0, 0, 0, .12), 0 -3px 5px -1px rgba(0, 0, 0, .4)
$shadow-8-up ?= 0 -8px 10px 1px $shadow-color, 0 -3px 14px 2px rgba(0, 0, 0, .12), 0 -5px 5px -3px rgba(0, 0, 0, .4)
$shadow-16-up ?= 0 -16px 24px 2px $shadow-color, 0  -6px 30px 5px rgba(0, 0, 0, .12), 0  -8px 10px -5px rgba(0, 0, 0, .4)


$z-dropdown      ?= 10
$z-drawer        ?= 20
$z-dialog        ?= 30
$z-notifier      ?= 40


$hoverable-shadow ?= $shadow-6
