$shadow-color = rgba(0, 0, 0, .14)

.shadow-transition
  transition box-shadow .28s cubic-bezier(.4, 0, .2, 1)

.z-none
  box-shadow none

.z-2
  box-shadow 0 2px 2px 0 $shadow-color, 0 1px 5px 0 rgba(0, 0, 0, .12), 0 3px 1px -2px rgba(0, 0, 0, .2)
.z-2-up
  box-shadow 0 -2px 2px 0 $shadow-color, 0 -1px 5px 0 rgba(0, 0, 0, .12), 0 -3px 1px -2px rgba(0, 0, 0, .2)

.z-3
  box-shadow 0 3px 4px 0 $shadow-color, 0 1px 8px 0 rgba(0, 0, 0, .12), 0 3px 3px -2px rgba(0, 0, 0, .4)
.z-3-up
  box-shadow 0 -3px 4px 0 $shadow-color, 0 -1px 8px 0 rgba(0, 0, 0, .12), 0 -3px 3px -2px rgba(0, 0, 0, .4)

.z-4
  box-shadow 0 4px 5px 0 $shadow-color, 0 1px 10px 0 rgba(0, 0, 0, .12), 0 2px 4px -1px rgba(0, 0, 0, .4)
.z-4-up
  box-shadow 0 -4px 5px 0 $shadow-color, 0 -1px 10px 0 rgba(0, 0, 0, .12), 0 -2px 4px -1px rgba(0, 0, 0, .4)

.z-6
  box-shadow 0 6px 10px 0 $shadow-color, 0 1px 18px 0 rgba(0, 0, 0, .12), 0 3px 5px -1px rgba(0, 0, 0, .4)
.z-6-up
  box-shadow 0 -6px 10px 0 $shadow-color, 0 -1px 18px 0 rgba(0, 0, 0, .12), 0 -3px 5px -1px rgba(0, 0, 0, .4)

.z-8
  box-shadow 0 8px 10px 1px $shadow-color, 0 3px 14px 2px rgba(0, 0, 0, .12), 0 5px 5px -3px rgba(0, 0, 0, .4)
.z-8-up
  box-shadow 0 -8px 10px 1px $shadow-color, 0 -3px 14px 2px rgba(0, 0, 0, .12), 0 -5px 5px -3px rgba(0, 0, 0, .4)

.z-16
  box-shadow 0 16px 24px 2px $shadow-color, 0  6px 30px 5px rgba(0, 0, 0, .12), 0  8px 10px -5px rgba(0, 0, 0, .4)
.z-16-up
  box-shadow 0 -16px 24px 2px $shadow-color, 0  -6px 30px 5px rgba(0, 0, 0, .12), 0  -8px 10px -5px rgba(0, 0, 0, .4)
