.q-transition

  &-animator
    height 100%
    > div
      height 100%

  &--slide-x
    transition transform .6s cubic-bezier(.86, 0, .07, 1)

    &-prev
      &-enter
        transform translate3d(-100%, 0, 0)
      &-leave, &-leave-to
        transform translate3d(100%, 0, 0)
        position absolute
        top 0
        left 0
        right 0

    &-next
      &-enter
        transform translate3d(100%, 0, 0)
      &-leave, &-leave-active
        position absolute
        top 0
        left 0
        right 0
      &-leave-to
        transform translate3d(-100%, 0, 0)
        position absolute

  &--slide-y
    transition transform .6s cubic-bezier(.86, 0, .07, 1)

    &-prev
      &-enter
        transform translate3d(0, -100%, 0)
      &-leave, &-leave-to
        transform translate3d(0, 100%, 0)
        position absolute
        top 0
        left 0
        right 0

    &-next
      &-enter
        transform translate3d(0, 100%, 0)
      &-leave, &-leave-active
        position absolute
        top 0
        left 0
        right 0
      &-leave-to
        transform translate3d(0, -100%, 0)
        position absolute

  &--fade
    transition opacity .4s ease-out

    &-prev, &-next
      &-enter-active, &-leave-active, &-leave-to
        position absolute
        top 0
        left 0
        right 0

      &-enter, &-leave, &-leave-to
        opacity 0
