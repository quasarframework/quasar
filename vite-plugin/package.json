{
  "name": "@quasar/vite-plugin",
  "version": "1.6.0",
  "description": "Vite plugin for Quasar Framework",
  "type": "module",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./src/index.js",
      "require": "./dist/index.cjs"
    },
    "./*": "./*"
  },
  "types": "index.d.ts",
  "scripts": {
    "build": "node ./build/clean.js && rollup --config ./build/rollup.config.js",
    "lint": "eslint --ext .js,.vue ./ --fix --report-unused-disable-directives",
    "test": "pnpm test:unit:ci && pnpm test:e2e:ci",
    "test:unit:dev": "vitest",
    "test:unit:ci": "vitest run",
    "test:e2e:start:dev": "cd ./playground && pnpm dev --port 9000",
    "test:e2e:start:serve": "cd ./playground && pnpm start --port 9000",
    "test:e2e:dev": "start-test \"pnpm test:e2e:start:dev\" http-get://localhost:9000 \"pnpm cypress open --e2e\"",
    "test:e2e:ci": "start-test \"pnpm test:e2e:start:serve\" http-get://localhost:9000 \"pnpm cypress run --e2e\""
  },
  "files": [
    "dist",
    "src",
    "index.d.ts"
  ],
  "keywords": [
    "vite-plugin",
    "quasar",
    "vite",
    "vue",
    "vuejs"
  ],
  "author": {
    "name": "Razvan Stoenescu",
    "email": "razvan.stoenescu@gmail.com",
    "url": "https://github.com/quasarframework"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quasarframework/quasar"
  },
  "devDependencies": {
    "cypress": "^13.0.0",
    "eslint-config-quasar": "workspace:*",
    "fs-extra": "^11.2.0",
    "quasar": "^2.11.10",
    "rollup": "^4.12.0",
    "start-server-and-test": "^2.0.0",
    "typescript": "^5.0.4",
    "vite-plugin-checker": "^0.6.4",
    "vitest": "^1.3.1"
  },
  "peerDependencies": {
    "@vitejs/plugin-vue": "^2.0.0 || ^3.0.0 || ^4.0.0 || ^5.0.0",
    "quasar": "^2.8.0",
    "vite": "^2.0.0 || ^3.0.0 || ^4.0.0 || ^5.0.0",
    "vue": "^3.0.0"
  },
  "license": "MIT",
  "bugs": "https://github.com/quasarframework/quasar/issues",
  "homepage": "https://quasar.dev",
  "funding": {
    "type": "github",
    "url": "https://donate.quasar.dev"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
