{
  "behavior": {
    "$listeners": true
  },

  "props": {
    "spread": {
      "type": "Boolean",
      "desc": "Spread horizontally to all available space",
      "category": "content"
    },

    "outline": {
      "type": "Boolean",
      "desc": "Use 'outline' design for buttons",
      "category": "style"
    },

    "flat": {
      "type": "Boolean",
      "desc": "Use 'flat' design for buttons",
      "category": "style"
    },

    "unelevated": {
      "type": "Boolean",
      "desc": "Remove shadow on buttons",
      "category": "style"
    },

    "rounded": {
      "type": "Boolean",
      "desc": "Applies a more prominent border-radius for squared shape buttons",
      "category": "style"
    },

    "push": {
      "type": "Boolean",
      "desc": "Use 'push' design for buttons",
      "category": "style"
    },

    "stretch": {
      "type": "Boolean",
      "desc": "When used on flexbox parent, buttons will stretch to parent's height",
      "category": "content"
    },

    "glossy": {
      "type": "Boolean",
      "desc": "Applies a glossy effect",
      "category": "style"
    }
  },

  "slots": {
    "default": {
      "desc": "Suggestion: QBtn"
    }
  },
  "css": {
    "button-border-radius": {
      "desc": "QBtnGroup's default border radius",
      "type": "size",
      "affects": [{
        "selector": ".q-btn-group",
        "property": "border-radius"
      }]
    },
    "button-shadow": {
      "desc": "QBtnGroup's shadow",
      "type": "shadow",
      "affects": [{
        "selector": ".q-btn-group",
        "property": "box-shadow"
      }]
    },
    "button-push-border-radius": {
      "desc": "QBtnGroup's border radius when using the \"push\" prop",
      "type": "size",
      "affects": [{
        "selector": ".q-btn-group--push",
        "property": "border-radius"
      }]
    },
    "button-transition": {
      "desc": "QBtnGroup content transition when using the \"push\" prop",
      "type": "transition",
      "affects": [{
        "selector": ".q-btn-group--push",
        "property": "transition"
      }]
    },
    "button-rounded-border-radius": {
      "desc": "QBtnGroup's border radius when using the \"rounded\" prop",
      "type": "size",
      "affects": [{
        "selector": ".q-btn-group--rounded",
        "property": "border-radius"
      }]
    }
  }
}
