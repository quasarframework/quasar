.q-rating
  color: $rating-grade-color
  vertical-align: middle

  &__icon
    color: currentColor
    text-shadow: $rating-shadow
    position: relative
    opacity: .4
    transition: transform .2s ease-in, opacity .2s ease-in

    &--hovered
      transform: scale(1.3)

    &--active
      opacity: 1
    &--exselected
      opacity: .7

    & + &
      margin-left: 2px

  &--no-dimming .q-rating__icon
    opacity: 1

  &--editable .q-icon
    cursor: pointer
  &--non-editable span, .q-icon
    outline: 0
