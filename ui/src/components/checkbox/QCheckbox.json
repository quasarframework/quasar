{
  "mixins": [ "mixins/checkbox" ],

  "props": {
    "indeterminate-value": {
      "type": "Any",
      "desc": "What model value should be considered as 'indeterminate'?",
      "default": null,
      "examples": [ 0, "not_answered" ],
      "category": "behavior"
    },

    "toggle-indeterminate": {
      "type": "Boolean",
      "desc": "When user clicks/taps on the component, should we toggle through the indeterminate state too?",
      "category": "behavior"
    }
  },
  "css": {
    "checkbox-transition": {
      "desc": "QCheckbox's transition",
      "type": "Transition",
      "value": ".22s cubic-bezier(0,0,.2,1) 0ms",
      "category": "Animation",
      "affects": [{
        "selector": ".q-checkbox__bg",
        "property": "transition"
      }]
    },
    "primary": {
      "desc": "QCheckbox's default color",
      "extends": "primary"
    },
    "option-focus-transition": {
      "desc": "QCheckbox's transform transition on desktop",
      "extends": "option-focus-transition",
      "affects": [{
        "selector": "body.desktop .q-checkbox__inner:before",
        "property": "transition",
        "template": "transform $value"
      }]
    }
  }
}
