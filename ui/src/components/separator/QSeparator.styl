.q-separator
  border: 0 /* rtl:ignore */
  background: $separator-color /* rtl:ignore */
  margin: 0 /* rtl:ignore */
  transition: background .3s, opacity .3s
  flex-shrink: 0

  &--dark
    background: $separator-dark-color

  &--horizontal
    display: block
    height: 1px

    &-inset
      margin-left: 16px /* rtl:ignore */
      margin-right: 16px /* rtl:ignore */
    &-item-inset
      margin-left: 72px
      margin-right: 0
    &-item-thumbnail-inset
      margin-left: 116px
      margin-right: 0

  &--vertical
    width: 1px
    height: auto
    align-self: stretch

    &-inset
      margin-top: 8px /* rtl:ignore */
      margin-bottom: 8px /* rtl:ignore */
